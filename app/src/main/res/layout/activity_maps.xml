<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:baselineAligned="false"
        tools:context=".activity.MapsActivity" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="2dp">

        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="75dp"
            android:text="2019-02-03"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgdate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/cloud_icon"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/wdate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="125dp"
            android:text="Clouds"
            android:textAlignment="gravity"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="75dp"
            android:text="2019-02-04"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/snow_icon" />

        <TextView
            android:id="@+id/wdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="125dp"
            android:text="Snow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="75dp"
            android:text="2019-02-05"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgdate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/rain_icon" />

        <TextView
            android:id="@+id/wdate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="125dp"
            android:text="Rain"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="75dp"
            android:text="2019-02-06"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgdate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="226dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/sun_icon" />

        <TextView
            android:id="@+id/wdate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="223dp"
            android:layout_marginTop="125dp"
            android:text="Sun"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="276dp"
            android:layout_marginTop="75dp"
            android:text="2019-02-07"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgdate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="293dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/rain_icon" />

        <TextView
            android:id="@+id/wdate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="125dp"
            android:text="Rain"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="9dp">


            <LinearLayout
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="weather"
                        android:textColor="#a9a9b0"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="CittÃ "
                        android:textColor="#3b3b3b"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/lbtemp"
                android:layout_width="54dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginTop="-40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Temp:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-40dp"
                android:background="@color/ic_launcher_background"
                android:gravity="center"
                android:text="3.3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
